extends ../layout.pug
block styles 
    title Nuevo Modelo 
block content 
    div  
        h2 Nuevo Modelo 
    section 
        form#formModel(action="/models/create" method="POST" enctype="multipart/form-data") 
            fieldset 
                select#category(name="category")
                    option(value="category") Categoria
                    if categories && categories.length > 0    
                        each cat in categories
                            option(value=`${cat.id}`) #{cat.name}
            fieldset 
                select#sub(name="sub")
                    option(value="") SubCategor√≠a
            fieldset 
                input(type="text" name="name" placeholder="Nombre")
            fieldset
                input(type="file" name="image" placeholder="Imagen")
            fieldset
                button Guardar
                
    script(src="/resources/js/models/create.js") 
include ../includes/footer.pug